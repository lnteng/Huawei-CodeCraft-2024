#include <stdio.h>

int main() {
    int a[10][111][111]; // 原始三维数组
    int (*b)[111][111]; // 别名数组

    // printf("a[5][1111][111] = %d\n", a[5][1111][111]);
    // printf("a[5][1111][111] = %d\n", a[5][1111][111]);

    // 将别名数组指向原始数组
    b = a;

    // 使用别名数组访问原始数组中的元素
    for (int i = 0; i < 5; ++i) {
        (*b)[1111][111] = b[i][1111][111]; // 将 b[i][1111][111] 的值赋给 a[i][1111][111]
    }

    // 验证结果
    printf("a[5][1111][111] = %d\n", a[5][1111][111]);

    return 0;
}
